{% extends 'base.html.twig' %}

{% block body %}
    <h1>Answer list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Answer</th>
                <th>Points</th>
                <th>Is_correct</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
            <tr>
                <td><a href="{{ path('answer_show', { 'id': answer.id }) }}">{{ answer.id }}</a></td>
                <td>{{ answer.answer }}</td>
                <td>{{ answer.points }}</td>
                <td>{% if answer.iscorrect %}Yes{% else %}No{% endif %}</td>
                <td>{% if answer.createdat %}{{ answer.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if answer.updatedat %}{{ answer.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('answer_show', { 'id': answer.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('answer_edit', { 'id': answer.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('answer_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
