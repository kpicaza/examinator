{% extends 'base.html.twig' %}

{% block body %}
    <h1>Exam list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>Access_code</th>
                <th>Is_active</th>
                <th>Has_help</th>
                <th>To_aprove</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exam in exams %}
            <tr>
                <td><a href="{{ path('exam_show', { 'id': exam.id }) }}">{{ exam.id }}</a></td>
                <td>{{ exam.subject }}</td>
                <td>{{ exam.accesscode }}</td>
                <td>{% if exam.isactive %}Yes{% else %}No{% endif %}</td>
                <td>{% if exam.hashelp %}Yes{% else %}No{% endif %}</td>
                <td>{{ exam.toaprove }}</td>
                <td>{% if exam.createdat %}{{ exam.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if exam.updatedat %}{{ exam.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('exam_show', { 'id': exam.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('exam_edit', { 'id': exam.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('exam_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
